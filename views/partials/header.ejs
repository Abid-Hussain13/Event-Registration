<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" 
    crossorigin="anonymous">
    <style>
        .fade-out {
            transition: opacity 1s ease-out;
            opacity: 0;
        }
    </style>
</head>

<body>
    <% if (successMessage.length > 0) { %>
        <div class="alert alert-success text-center" id="successAlert">
            <%= successMessage[0] %>
        </div>
    <% } %>

    <% if (errorMessage.length > 0) { %>
        <div class="alert alert-danger text-center" id="errorAlert">
            <%= errorMessage[0] %>
        </div>
    <% } %>
    <header class="container my-3">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded-3 shadow p-3">
            <div class="container-fluid">
                <a class="navbar-brand fs-1 fw-bold text-light" href="/">EventNest</a>
                <a href="/signup" class="btn btn-warning text-light fw-semibold">Sign Up</a>
            </div>
        </nav>
    </header>

    <script>
        function fadeOutAndRemove(element) {
            if (element) {
                element.classList.add('fade-out');
                
                setTimeout(() => {
                    element.remove();
                }, 1000); 
            }
        }

        const successAlert = document.getElementById('successAlert');
        if (successAlert) {
            setTimeout(() => {
                fadeOutAndRemove(successAlert);
            }, 500);
        }

        const errorAlert = document.getElementById('errorAlert');
        if (errorAlert) {
            setTimeout(() => {
                fadeOutAndRemove(errorAlert);
            }, 500);
        }
    </script>
</body>
</html>